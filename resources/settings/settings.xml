<settings>

    <setting propertyKey="@Properties.BackgroundColor" title="@Strings.BackgroundColorTitle">
        <settingConfig type="list">
            <listEntry value="0x000000">@Strings.ColorBlack</listEntry>
            <listEntry value="0x555555">@Strings.ColorDarkGray</listEntry>
            <listEntry value="0xAAAAAA">@Strings.ColorLightGray</listEntry>
            <listEntry value="0xFFFFFF">@Strings.ColorWhite</listEntry>
        </settingConfig>
    </setting>

    <setting propertyKey="@Properties.ForegroundColor" title="@Strings.ForegroundColorTitle">
        <settingConfig type="list">
            <listEntry value="0x000000">@Strings.ColorBlack</listEntry>
            <listEntry value="0x0000FF">@Strings.ColorBlue</listEntry>
            <listEntry value="0xFF0000">@Strings.ColorRed</listEntry>
            <listEntry value="0xFFFFFF">@Strings.ColorWhite</listEntry>
        </settingConfig>
    </setting>

    <setting propertyKey="@Properties.AddLeadingZero" title="@Strings.AddLeadingZeroTitle">
        <settingConfig type="boolean" />
    </setting>
    
    <setting propertyKey="@Properties.DisplaySeconds" title="@Strings.DisplaySecondsTitle">
        <settingConfig type="list">
            <listEntry value="0">@Strings.OnWake</listEntry>
            <listEntry value="1">@Strings.AlwaysOn</listEntry>
            <listEntry value="2">@Strings.Off</listEntry>
        </settingConfig>
    </setting>
    
    <setting propertyKey="@Properties.FirstDayOfWeek" title="@Strings.FirstDayOfWeekTitle">
        <settingConfig type="list">
            <listEntry value="2">@Strings.Monday</listEntry>
            <listEntry value="1">@Strings.Sunday</listEntry>
            <listEntry value="7">@Strings.Saturday</listEntry>
        </settingConfig>
    </setting>
    
    <setting propertyKey="@Properties.PowerSavingMode" title="@Strings.PowerSavingModeTitle">
        <settingConfig type="list">
            <listEntry value="0">@Strings.Off</listEntry>
            <listEntry value="1">@Strings.On</listEntry>
            <listEntry value="2">@Strings.DuringDnd</listEntry>
        </settingConfig>
    </setting>
    
    <setting propertyKey="@Properties.AlternativeTimezone" title="@Strings.PowerSavingModeTitle">
        <settingConfig type="list">
        	<listEntry value="12">@Strings.GmtPlus12</listEntry>
        	<listEntry value="11">@Strings.GmtPlus11</listEntry>
        	<listEntry value="10">@Strings.GmtPlus10</listEntry>
        	<listEntry value="9">@Strings.GmtPlus9</listEntry>
        	<listEntry value="8">@Strings.GmtPlus8</listEntry>
        	<listEntry value="7">@Strings.GmtPlus7</listEntry>
        	<listEntry value="6">@Strings.GmtPlus6</listEntry>
        	<listEntry value="5">@Strings.GmtPlus5</listEntry>
        	<listEntry value="4">@Strings.GmtPlus4</listEntry>
        	<listEntry value="3">@Strings.GmtPlus3</listEntry>
        	<listEntry value="2">@Strings.GmtPlus2</listEntry>
        	<listEntry value="1">@Strings.GmtPlus1</listEntry>
            <listEntry value="0">@Strings.Gmt</listEntry>
            <listEntry value="-1">@Strings.GmtMinus1</listEntry>
            <listEntry value="-2">@Strings.GmtMinus2</listEntry>
            <listEntry value="-3">@Strings.GmtMinus3</listEntry>
            <listEntry value="-4">@Strings.GmtMinus4</listEntry>
            <listEntry value="-5">@Strings.GmtMinus5</listEntry>
            <listEntry value="-6">@Strings.GmtMinus6</listEntry>
            <listEntry value="-7">@Strings.GmtMinus7</listEntry>
            <listEntry value="-8">@Strings.GmtMinus8</listEntry>
            <listEntry value="-9">@Strings.GmtMinus9</listEntry>
            <listEntry value="-10">@Strings.GmtMinus10</listEntry>
            <listEntry value="-11">@Strings.GmtMinus11</listEntry>
            <listEntry value="-12">@Strings.GmtMinus12</listEntry>
        </settingConfig>
    </setting>
    
    <setting propertyKey="@Properties.ActiveCaloriesGoal" title="@Strings.ActiveCaloriesGoalTitle" prompt="@Strings.ActiveCaloriesGoalPrompt">
		<settingConfig type="numeric" min="0" errorMessage="@Strings.ActiveCaloriesGoalError" />
	</setting>

</settings>
